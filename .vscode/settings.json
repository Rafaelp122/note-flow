{
  // --- Interface e Geral ---
  "window.zoomLevel": 0,
  "liveServer.settings.port": 5501,

  // --- Python: Pylance e Análise Estática ---
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.defaultInterpreterPath": "venv/bin/python",

  // --- Testes (Pytest) ---
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "."
  ],

  // --- Formatação e Linting Moderno ---
  // Nota: Recomenda-se o uso das extensões oficiais (Black, Flake8, Mypy) 
  // que substituem as definições legadas "python.linting.*"
  "python.formatting.provider": "none", 
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // --- Tailwind CSS v4 e Django HTML ---
  // Garante que o Autocomplete do Tailwind funcione em templates Django
  "tailwindCSS.includeLanguages": {
    "django-html": "html",
    "plaintext": "html"
  },
  // Permite que o Tailwind detete classes dentro de ficheiros Python (Views/Forms)
  "tailwindCSS.experimental.classRegex": [
    ["class\": \"([^\"]*)", "([a-zA-Z0-9\\- ]+)"]
  ],

  // --- Configurações de HTML e Django Templates ---
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[django-html]": {
    // Recomenda-se a extensão "djLint" para formatar Django HTML sem quebrar as tags
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": false, // Evita que o formatador padrão de HTML estrague tags Django
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },

  // --- Associações de Ficheiros ---
  "files.associations": {
    "**/templates/**/*.html": "django-html",
    "**/base_templates/**/*.html": "django-html",
    "*.html": "html",
    "*.xml": "html",
    "*.svg": "html",
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },

  // --- Emmet (Atalhos de Código) ---
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "django-html": "html"
  }
}