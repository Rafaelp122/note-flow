{
  // Zoom da janela
  "window.zoomLevel": 0,

  // Pylance e análise estática
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",

  // Testes (pytest como runner padrão na raiz)
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["."],

  // Linters e type-checkers
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],

  // Formatação e intérprete
  "python.formatting.autopep8Args": ["--indent-size=4"],
  "python.defaultInterpreterPath": "venv/bin/python",

  // mypy daemon no venv do projeto
  // "mypy.dmypyExecutable": "/home/rafael/Projetos/projetos_django/curso_projeto_django1/venv/bin/dmypy",

  // Preferências do editor por linguagem
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": { "other": true, "comments": true, "strings": true }
  },
  "[django-html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": false,
    "editor.quickSuggestions": { "other": true, "comments": true, "strings": true }
  },

  // Associações de arquivos e linguagens
  "files.associations": {
    "**/templates/**/*.html": "django-html",
    "**/base_templates/**/*.html": "django-html",
    "*.html": "html",
    "*.xml": "html",
    "*.svg": "html",
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "django-html": "html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },

  // Emmet nos templates Django
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact",
    "javascriptreact": "javascriptreact"
  },
  "liveServer.settings.port": 5501
}